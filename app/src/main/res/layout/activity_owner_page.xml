<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lyzz.bbcampus.pages.MainList"
    android:orientation="vertical"
    android:background="#f2f2f2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#10d295"
        android:paddingTop="10dp">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:background="@drawable/back"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:id="@+id/backButton" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/message"
            android:layout_marginRight="16dp"
            android:id="@+id/messageButton"
            android:layout_alignTop="@+id/backButton"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp" />

        <com.lyzz.bbcampus.viewsetting.XCRoundImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/unlog"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/dispalyPhoto" />

        <TextView
            android:text="未登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dispalyPhoto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:id="@+id/username"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

        <TextView
            android:text="请点击头像进行登陆"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:id="@+id/userinfo" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#efefef">
        <GridView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:numColumns="2"
            android:horizontalSpacing="2dp"
            android:id="@+id/middlelist"></GridView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:id="@+id/firstlist"
            android:divider="#f2f2f2"
            android:dividerHeight="2dp"
            ></ListView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_marginTop="5dp"
        android:background="#f2f2f2"
        android:orientation="vertical">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/subscribe"
                android:id="@+id/subscribeimage"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/subscribetext"
                android:text="我的订阅"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textAlignment="textStart" />
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                android:id="@+id/subscribeswitch"
                android:layout_weight="1" />
        </LinearLayout>
        <ListView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:background="#ffffff"
            android:id="@+id/secondlist"
            android:divider="#f2f2f2"
            android:dividerHeight="2dp"
            ></ListView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:id="@+id/thirdlist"
            android:divider="#f2f2f2"
            android:dividerHeight="2dp"
            ></ListView>
    </LinearLayout>


</LinearLayout>