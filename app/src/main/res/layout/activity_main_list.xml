<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f3"
    tools:context="com.lyzz.bbcampus.pages.MainList">
    <com.lyzz.bbcampus.viewsetting.XCRoundImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ower"
        android:id="@+id/owerButton"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />
    <com.lyzz.bbcampus.viewsetting.XCRoundImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/map"
        android:id="@+id/mapButton"
        android:layout_marginEnd="10dp"
        android:layout_alignTop="@+id/search"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:text="@string/mainpage_search"
        android:ems="10"
        android:background="@drawable/corners_icon"
        android:id="@+id/search"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#7b7b7b"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/owerButton"
        android:id="@+id/line">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line"
        android:background="#ffffff"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/orderlistview"
            android:divider="#f2f2f2"
            android:dividerHeight="2dp"></ListView>
    </LinearLayout>

</RelativeLayout>
